{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never"
        }
      }
    ],
    "object-literal-sort-keys": false,
    "jsdoc-format": false
  }
}
